<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemoTestSuite-Chrome" parallel="none" thread-count="1">
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <listeners>
        <listener class-name="com.saucedemos.listeners.TestListener"/>
    </listeners>

    <!-- Run tests sequentially to avoid state conflicts -->
    <test name="LoginTests-Chrome">
        <classes>
            <class name="com.saucedemos.tests.LoginTest"/>
        </classes>
    </test>

    <test name="ProductTests-Chrome">
        <classes>
            <class name="com.saucedemos.tests.ProductTest"/>
        </classes>
    </test>

    <test name="CartTests-Chrome">
        <classes>
            <class name="com.saucedemos.tests.CartTest"/>
        </classes>
    </test>
</suite>