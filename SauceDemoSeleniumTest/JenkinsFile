pipeline {
    agent any

    tools {
        maven 'Maven-3.9.11'  // This must match your Jenkins Global Tool Configuration
    }

    environment {
        MAVEN_OPTS = '-Xmx1024m'
    }

    stages {
        stage('Environment Check') {
            steps {
                echo 'Checking environment...'
                sh 'java -version'
                sh 'mvn -version'
                sh 'echo "JAVA_HOME: $JAVA_HOME"'
                sh 'echo "PATH: $PATH"'
            }
        }
    }
}